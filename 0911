for i in range(8):
    for j in range(8):
        if i == 0 or i == 7:
            print("*" , end= " ")
        else:
            if j == 0:
                print("*", end= " ")
                for i in range(6):
                    print(" ", end= " ")
                print("*" , end= " ")
    print()

for i in range(6,0,-1):
    for j in range(0,i):
        print(i , end=" ")
    print()
